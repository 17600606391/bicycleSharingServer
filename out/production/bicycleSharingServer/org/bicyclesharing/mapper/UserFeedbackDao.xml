<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.bicyclesharing.dao.UserFeedbackDao">
    <!--1.添加用户反馈-->
    <insert id="addUserFeedback" parameterType="UserFeedback">
        INSERT INTO user_feedback (feedback_id, feedback_title, feedback_content, user_id, bicycle_id, feedback_time, feedback_statement)
        VALUES (#{feedbackId}, #{feedbackTitle}, #{feedbackContent}, #{userId}, #{bicycleId}, #{feedbackTime},
                #{feedbackStatement})
    </insert>
    <!--2.删除用户反馈-->
    <delete id="deleteUserFeedbackById" parameterType="Integer">
        DELETE FROM user_feedback
        WHERE feedback_id=#{feedbackId}
    </delete>
    <!--3.修改用户反馈-->
    <update id="updateUserFeedback" parameterType="Integer">
        UPDATE user_feedback
        SET feedback_statement=#{feedbackStatement}
    </update>
    <!--4.查询用户反馈-->
    <select id="selectUserFeedbackById" parameterType="Integer" resultType="UserFeedback">
        SELECT *
        FROM user_feedback
        WHERE feedback_id=#{feedbackId}
    </select>
</mapper>